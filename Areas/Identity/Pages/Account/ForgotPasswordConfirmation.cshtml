@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Confirmación de contraseña olvidada";
}

<style>
    .forgot-password-page {
        padding: 4rem 0;
        text-align: center;
    }

    .forgot-password-page h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #343a40;
        margin-bottom: 1.5rem;
    }

    .forgot-password-page h2 {
        font-size: 1.5rem;
        font-weight: 500;
        color: #6c757d;
        margin-bottom: 2rem;
    }

    .forgot-password-page hr {
        margin-bottom: 2rem;
        border-color: #e9ecef;
    }

    .forgot-password-page .container {
        max-width: 600px;
    }
    
</style>


<div class="forgot-password-page">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <p class="lead">
            Por favor, revisa tu correo electrónico para restablecer tu contraseña.
        </p>
    </div>
</div>
