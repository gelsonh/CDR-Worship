@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "¿Olvidaste tu contraseña?";
}

<style>
    .forgot-password-page {
        padding: 4rem 0;
        text-align: center;
    }

    .forgot-password-page h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #343a40;
        margin-bottom: 1.5rem;
    }

    .forgot-password-page h2 {
        font-size: 1.5rem;
        font-weight: 500;
        color: #6c757d;
        margin-bottom: 2rem;
    }

    .forgot-password-page hr {
        margin-bottom: 2rem;
        border-color: #e9ecef;
    }

    .form-floating label {
        font-size: 1rem;
        color: #6c757d;
    }

    .form-floating .form-control {
        height: 3.5rem;
        border-radius: 0.5rem;
    }

    .text-danger {
        font-size: 0.875rem;
    }

    .forgot-password-page .container {
        max-width: 600px;
    }
</style>

<div class="forgot-password-page">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <h2>Ingresa tu correo electrónico para restablecer tu contraseña.</h2>
        <hr />

        <div class="row justify-content-center">
            <div class="col-md-8">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Correo Electrónico</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-color btn-primary w-100">Restablecer contraseña</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}