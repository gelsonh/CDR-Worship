@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmación de Registro";
}

<style>
    .confirmation-page {
        padding: 3rem 0;
        text-align: center;
    }

    .confirmation-page h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #343a40;
        margin-bottom: 2rem;
    }

    .confirmation-page p {
        font-size: 1.125rem;
        color: #6c757d;
        margin-bottom: 1.5rem;
    }

    .confirmation-page a#confirm-link {
        font-size: 1.125rem;
        color: #007bff;
        text-decoration: none;
        padding: 0.75rem 1.25rem;
        background-color: #f8f9fa;
        border: 2px solid #007bff;
        border-radius: 5px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .confirmation-page a#confirm-link:hover {
        background-color: #007bff;
        color: #fff;
    }

</style>

<div class="confirmation-page">
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        @if (@Model.DisplayConfirmAccountLink)
        {
                <p>
                    Haga clic en el siguiente enlace para confirmar su cuenta:
                </p>
                <p>
                    <a id="confirm-link" href="@Model.EmailConfirmationUrl">Confirmar mi cuenta</a>
                </p>
        }
        else
        {
                <p>
                    Por favor revise su correo electrónico para confirmar su cuenta. Si no encuentra el mensaje, revise su carpeta de spam.
                </p>
        }
    </div>
</div>