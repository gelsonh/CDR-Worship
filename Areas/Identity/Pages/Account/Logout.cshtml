@page
@model LogoutModel
@{
    ViewData["Title"] = "Cerrar sesión";
}



<header>
    <div class="section-page">
        <div class="container mt-5">
            <h1>@ViewData["Title"]</h1>
            @{
                if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                        asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="nav-link btn btn-link text-danger">Haz clic aquí para cerrar
                            sesión</button>
                    </form>
                }
                else
                {
                    <p>Has cerrado sesión en la aplicación exitosamente.</p>
                }
            }
        </div>
    </div>
</header>
