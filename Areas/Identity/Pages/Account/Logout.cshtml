@page
@model LogoutModel
@{
    ViewData["Title"] = "Cerrar sesión";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] CDR Worship</title>

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap"
        rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/css/style.css" asp-asp-append-version="true" />
    @* <link rel="stylesheet" href="~/CDR_Worship.styles.css" asp-append-version="true" /> *@
</head>

<style>
    /* Style for the logout box */
    .logout-wrapper {
        background-color: #fff;
        border-radius: 1rem;
        padding: 3rem 2rem;
        box-shadow: 0 1.5rem 3rem rgba(0, 0, 0, 0.1);
        max-width: 600px;
        width: 100%;
    }

    /* Icon style */
    .logout-icon {
        color: #dc3545;
        width: 3rem;
        height: 3rem;
    }

    h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #343a40;
    }

    p.lead {
        font-size: 1.125rem;
        color: #6c757d;
    }

    /* Shadow and Border Radius */
    .shadow-lg {
        box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175);
    }

    .border-0 {
        border: none;
    }

    .rounded-lg {
        border-radius: 1rem;
    }
</style>


<body>

    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <div class="logout-wrapper text-center shadow-lg border-0 rounded-lg">
                <svg class="logout-icon mb-4" xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    viewBox="0 0 24 24">
                    <path d="M15 3H9a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V5a2 2 0 0 0-2-2z"></path>
                    <polyline points="10 17 15 12 10 7"></polyline>
                    <line x1="15" y1="12" x2="3" y2="12"></line>
                </svg>

                <h1 class="mb-4">Cerrar sesión</h1>
                <p class="lead mb-4">
                    ¿Estás seguro de que deseas salir? <br> Si cierras sesión, deberás iniciar sesión nuevamente para
                    acceder a tu cuenta.
                </p>

                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                    method="post">
                    <button type="submit" class="btn btn-color btn-danger btn-lg px-4">
                        Cerrar sesión
                    </button>
                </form>
            </div>
        }
        else
        {
            <p class="text-center">Has cerrado sesión exitosamente.</p>
        }
    </div>

    <!-- Incluir jQuery primero -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Incluir Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <!-- Incluir los plugins de validación después de jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>


    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>

</html>