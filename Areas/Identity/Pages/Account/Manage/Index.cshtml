@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" class="profile-form">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3 profile-input">
                <input asp-for="Input.FirstName" class="form-control" placeholder="Nombre" />
                <label asp-for="Input.FirstName" class="form-label">Nombre</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 profile-input">
                <input asp-for="Input.LastName" class="form-control" placeholder="Apellido" />
                <label asp-for="Input.LastName" class="form-label">Apellido</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit"
                class="w-100 btn-color btn-lg btn-primary mt-3">Guardar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}