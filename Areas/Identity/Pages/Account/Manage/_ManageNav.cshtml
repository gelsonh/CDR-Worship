@inject SignInManager<AppUser> SignInManager
@{
        var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<nav class="manage-nav">
        <ul class="nav flex-column">
                <li class="nav-item">
                        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
                                <span class="nav-icon bi bi-person-circle"></span> Perfil
                        </a>
                </li>
                <li class="nav-item my-2">
                        <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
                                <span class="nav-icon bi bi-envelope"></span> Correo Electrónico
                        </a>
                </li>
                <li class="nav-item">
                        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password"
                                asp-page="./ChangePassword">
                                <span class="nav-icon bi bi-shield-lock"></span> Contraseña
                        </a>
                </li>
                @if (hasExternalLogins)
                {
                        <li id="external-logins" class="nav-item my-2">
                                <a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)"
                                        asp-page="./ExternalLogins">
                                        <span class="nav-icon bi bi-box-arrow-in-right"></span> Inicios de Sesión Externos
                                </a>
                        </li>
                }
                <li class="nav-item mt-2">
                        <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data"
                                asp-page="./PersonalData">
                                <span class="nav-icon bi bi-file-person"></span> Datos Personales
                        </a>
                </li>
        </ul>
</nav>