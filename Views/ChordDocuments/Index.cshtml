@model IEnumerable<CDR_Worship.Models.ChordDocument>

@{
    ViewData["Title"] = "Index";
}



<div class="container custom-margin">

    <div class="box-shadow">

        <div class="border-bottom p-4 d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0">Acordes</h4>
            @if (User.Identity!.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Moderator")) ||
            User.IsInRole("DemoUser"))
            {
                <a asp-action="Create" asp-controller="ChordDocuments" class="btn btn-color btn-sm">Subir Nueva
                    Canción</a>
            }
        </div>

        <div class="card-body">

            <div class="d-flex justify-content-between my-3">
                <!-- Selector de cantidad de filas -->
                <div class="d-flex align-items-center">
                    <label for="rowCount" class="form-label ms-2">Mostrar:</label>
                    <select id="rowCount" class="form-select form-select-sm w-auto ms-2">
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                    </select>
                </div>

                <div class="mb-3 me-2">
                    <input type="text" id="searchInput" class="form-control form-control-md w-100"
                        placeholder="Buscar canciones...">
                </div>
            </div>


            <div class="table-responsive">
                <table class="table table-striped table-bordered text-nowrap custom-table">
                    <thead>
                        <tr>

                            <th>Nombre de la Canción</th>
                            <th>Artista/s</th>
                            <th>Acordes</th>
                            <th>Detalles</th>
                        </tr>
                    </thead>
                    <tbody id="songTableBody">
                        @foreach (var chordDocument in Model)
                        {
                            <tr>
                                <td>@chordDocument.SongName</td>
                                <td>@chordDocument.Description</td>
                                <td class="text-center">@chordDocument.Chord!.ChordName</td>
                                <td style="text-align: center;">
                                    <a style="color: inherit;" class="text-decoration-none mx-2"
                                        href="@Url.Action("ViewDocument", "ChordDocuments", new { id = chordDocument.Id })"
                                        data-toggle="tooltip" title="Ver" target="_blank">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a style="color: inherit;"
                                        href="@Url.Action("Download", "ChordDocuments", new { id = chordDocument.Id })"
                                        data-toggle="tooltip" title="Descargar" class="mx-2 text-decoration-none">
                                        <i class="bi bi-file-earmark-arrow-down"></i>
                                    </a>
                                    @if (User.Identity!.IsAuthenticated && (User.IsInRole("Admin") ||
                                   User.IsInRole("Moderator")))
                                    {
                                        <a style="color: inherit;" asp-action="Edit" asp-route-id="@chordDocument.Id"
                                            data-toggle="tooltip" title="Editar" class="mx-2 text-decoration-none">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a style="color: inherit;" asp-action="Delete" asp-route-id="@chordDocument.Id"
                                            data-toggle="tooltip" title="Eliminar" class="mx-2 text-decoration-none">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
