@model CDR_Worship.Models.ChordDocument

@{
    ViewData["Title"] = "Delete";
}

<div class="section-page py-5">
    <div class="container" style="max-width: 600px; margin: 0 auto;">
        <div class="card shadow-sm border-0">
            <div class="card-body p-5">
                <h2 class="text-center text-danger mb-4 fw-bold">Eliminar Canción</h2>
                <p class="text-center mb-5">¿Estás seguro de que quieres eliminar esta canción?</p>

                <div class="song-details mb-5">
                    <div class="d-flex justify-content-between border-bottom pb-3 mb-3">
                        <span class="fw-bold">Canción:</span>
                        <span>@Html.DisplayFor(model => model.SongName)</span>
                    </div>
                    <div class="d-flex justify-content-between border-bottom pb-3 mb-3">
                        <span class="fw-bold">Artista/s:</span>
                        <span>@Html.DisplayFor(model => model.Description)</span>
                    </div>
                    <div class="d-flex justify-content-between border-bottom pb-3">
                        <span class="fw-bold">Acorde:</span>
                        <span>@(Model.Chord != null ? Model.Chord.ChordName : "N/A")</span>
                    </div>
                </div>

                <form asp-action="Delete" class="d-flex justify-content-between">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}