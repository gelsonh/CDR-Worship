@model CDR_Worship.Models.ChordDocument

@{
    ViewData["Title"] = "Delete";
}


<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card box-shadow" style="max-width: 600px; width: 100%;">
        <div class="card-body p-5">
            <h1 class="text-center text-danger mb-5" style="font-weight: 700; font-size: 1.8rem;">Eliminar Canción</h1>
            <p class="text-center mb-5">¿Estás seguro de que quieres eliminar esta canción?</p>

            <div class="song-details mb-5">
                <div class="d-flex justify-content-between border-bottom pb-3 mb-3">
                    <span class="fw-bold">Canción:</span>
                    <span>@Html.DisplayFor(model => model.SongName)</span>
                </div>
                <div class="d-flex justify-content-between border-bottom pb-3 mb-3">
                    <span class="fw-bold">Artista/s:</span>
                    <span>@Html.DisplayFor(model => model.Description)</span>
                </div>
                <div class="d-flex justify-content-between border-bottom pb-3">
                    <span class="fw-bold">Acorde:</span>
                    <span>@(Model.Chord != null ? Model.Chord.ChordName : "N/A")</span>
                </div>
            </div>

            <form asp-action="Delete" class="d-flex justify-content-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg btn-color mx-2">Eliminar</button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg btn-color">Volver a la lista</a>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}