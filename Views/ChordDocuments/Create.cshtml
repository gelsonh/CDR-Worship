@model CDR_Worship.Models.ChordDocument

@{
    ViewData["Title"] = "Create";

}


<style>
    .section-page {
        padding: 2rem 0;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 2rem;
    }

    .cardAttachment {
        border-radius: 10px;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.15);
        background-color: #ffffff;
        padding: 20px;
        margin-bottom: 1.5rem;
    }

        .cardAttachment h3 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

    .drop_box {
        padding: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        border: 3px dotted #a3a3a3;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .drop_box:hover {
            background-color: #f8f8f8;
        }

        .drop_box h4 {
            font-size: 1rem;
            font-weight: 500;
            color: #2e2e2e;
            margin-bottom: 0.5rem;
        }

        .drop_box p {
            font-size: 0.875rem;
            color: #a3a3a3;
            margin-bottom: 1rem;
        }

    .btn-File {
        background-color: #005af0;
        color: #ffffff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-File:hover {
            background-color: #ffffff;
            color: #005af0;
            border: 1px solid #005af0;
        }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da;
        padding: 10px;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        background-color: #005af0;
        border-color: #005af0;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0041c4;
            border-color: #0041c4;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>

<div class="section-page">
    <div class="container mt-5">
        <h2 class="text-center mb-4 display-2">Documento con su acorde</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Create" asp-controller="ChordDocuments" enctype="multipart/form-data" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="SongDocumentId" />
                            <input type="hidden" asp-for="Created" />
                            <input type="hidden" asp-for="Updated" />

                            <div class="form-group my-3">
                                <div class="cardAttachment">
                                    <h3>Subir Archivos</h3>
                                    <div class="drop_box">
                                        <header>
                                            <h4>Seleccionar Archivo Aquí</h4>
                                            <p>Arrastra y suelta o haz clic para seleccionar un archivo</p>
                                        </header>
                                        <label class="btn-File">
                                            <input name="FormFile" type="file" class="form-control-file" id="fileID" />
                                            Elegir Archivo
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mt-4">
                                <label asp-for="SongName" class="control-label">Nombre de la Canción</label>
                                <input asp-for="SongName" class="form-control" />
                                <span asp-validation-for="SongName" class="text-danger"></span>
                            </div>

                            <div class="form-group my-3">
                                <label asp-for="Description" class="control-label">Nombre del Artista o Banda</label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ChordId" class="control-label">Acordes</label>
                                <select asp-for="ChordId" class="form-control" asp-items="@ViewBag.ChordId">
                                    <option value="">Selecciona el Acorde</option>
                                </select>
                            </div>

                            <div class="form-group mt-3">
                                <button type="submit" class="btn btn-primary">Crear</button>
                                <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la Lista</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
