@model CDR_Worship.Models.ViewModel.SongAudioViewModel


@{
    ViewData["Title"] = "Editar Video";
}

<div class="container-xxl my-2 d-flex justify-content-center align-items-center min-vh-100">
    <div class="form-container">

        <div class="card-body p-5">
            <h1 class="card-title text-center">@ViewData["Title"]</h1>
            <hr />

            <div class="justify-content-center">

                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-floating mb-4">
                        <input type="text" asp-for="SongName" class="form-control rounded-3"
                            placeholder="Nombre de la Canción" />
                        <label asp-for="SongName" class="form-label">Nombre de la Canción:</label>
                        <span asp-validation-for="SongName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input type="text" asp-for="YouTubeUrl" class="form-control rounded-3"
                            placeholder="URL de YouTube" />
                        <label asp-for="YouTubeUrl" class="form-label">URL de YouTube:</label>
                        <span asp-validation-for="YouTubeUrl" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <select asp-for="ChordId" class="form-select rounded-3"
                            asp-items="@(new SelectList(Model.Chords, "Id", "ChordName"))">
                            <option value="">Seleccionar Tonalidad</option>
                        </select>
                        <label asp-for="ChordId" class="form-label">Tonalidad:</label>
                        <span asp-validation-for="ChordId" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-color btn-primary mx-2">Guardar</button>
                        <a asp-action="Index" class="btn btn-color btn-outline-secondary mx-2">Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}