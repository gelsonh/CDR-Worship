@model IEnumerable<CDR_Worship.Models.SongDocument>

@{
    ViewData["Title"] = "Index";
}



<style>
    .details-control {
        background: url("~/dist/js/pages/datatable/details_open.png") no-repeat center center;
        cursor: pointer;
    }

    tr.shown .details-control {
        background: url("~/dist/js/pages/datatable/details_close.png") no-repeat center center;
    }

    .section-page {
        padding: 2rem 0;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .card-subtitle {
        font-size: 1rem;
        font-weight: normal;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .table thead th {
        background-color: #f8f9fa;
    }

    .view-document {
        color: #007bff;
        transition: color 0.3s ease;
    }

        .view-document:hover {
            color: #0056b3;
        }

    .bi {
        font-size: 1.25rem;
    }
</style>

<div id="upload" class="section-page">
    <div class="container mt-5">
        <h2 class="text-center display-1 my-4">Las Letras de las Canciones</h2>
        <div class="card">
            <div class="border-bottom p-4">
                <h4 class="card-title mb-0">Aquí puedes descargar o ver documentos de las canciones.</h4>
            </div>
            <div class="card-body">
            

                <div class="d-flex justify-content-between mb-3">
                    <div class="mb-3">
                        <input type="text" id="searchInput" class="form-control form-control-md w-100" placeholder="Buscar canciones...">
                    </div>

                    <!-- Selector de cantidad de filas -->
                    <div class="d-flex align-items-center">
                        <label for="rowCount" class="form-label me-2">Mostrar:</label>
                        <select id="rowCount" class="form-select form-select-sm w-auto">
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select>
                    </div>
                </div>


                <div class="table-responsive">
                    <table class="table table-striped table-bordered text-nowrap">
                        <thead>
                            <tr>
                                <th>Documento</th>
                                <th>Nombre de la Canción</th>
                                <th>Artista/s</th>
                                <th>Detalles</th>
                            </tr>
                        </thead>
                        <tbody id="songTableBody">
                            <!-- Aquí puedes iterar sobre los documentos de letras de canciones -->
                            @foreach (var songDocument in Model)
                            {
                                <tr>
                                    <td>
                                        <ul class="list-unstyled">
                                            @foreach (var attachment in songDocument.SongAttachments)
                                            {
                                                <li>
                                                    <i class="bi bi-file-earmark"></i>
                                                    @attachment.FileName
                                                </li>
                                            }
                                        </ul>
                                    </td>
                                    <td>@songDocument.SongName</td>
                                    <td>@songDocument.Description</td>
                                    <td class="d-flex justify-content-center align-items-center">
                                        <a class="view-document mx-2" href="@Url.Action("ViewDocument", "SongDocuments", new { id = songDocument.Id })" data-toggle="tooltip" title="Ver" target="_blank">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Download", "SongDocuments", new { id = songDocument.Id })" data-toggle="tooltip" title="Descargar" class="mx-2 text-decoration-none">
                                            <i class="bi bi-file-earmark-arrow-down"></i>
                                        </a>

                                        @if (User.Identity!.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Moderator")))
                                        {
                                            <a asp-action="Edit" asp-route-id="@songDocument.Id" data-toggle="tooltip" title="Editar" class="mx-2 text-decoration-none">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@songDocument.Id" data-toggle="tooltip" title="Eliminar" class="mx-2 text-decoration-none">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (User.Identity!.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Moderator")))
                {
                    <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-4">

                        <a href="@Url.Action("Create", "SongDocuments")" class="btn btn-primary btn-sm">Subir Nuevo Documento</a>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



































