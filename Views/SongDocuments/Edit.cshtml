@model CDR_Worship.Models.SongDocument

@{
    ViewData["Title"] = "Edit";
}

<div class="section-page">
    <div class="container-xxl mt-5">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Edit Song Document</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label for="SongName" class="form-label">Nombre de la cancion</label>
                        <input type="text" class="form-control" id="SongName" asp-for="SongName" />
                        <span asp-validation-for="SongName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Description" class="form-label">Artista/s</label>
                        <input type="text" class="form-control" id="Description" asp-for="Description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
