@model CDR_Worship.Models.SongDocument

@{
    ViewData["Title"] = "Edit";
}


<style>
    /* Form Styles */
    .form-floating .form-control,
    .form-floating .form-select {
        border-radius: 0.5rem;
    }

    .form-floating label {
        font-size: 0.875rem;
        color: #6c757d;
    }

    /* Optional: Add custom focus styles */
    .form-control:focus,
    .form-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
    }
</style>


<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card box-shadow" style="max-width: 600px; width: 100%;">

        <div class="card-body p-5">
            <h1 class="text-center mb-5" style="font-weight: 700; font-size: 1.8rem;">@ViewData["Title"]</h1>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-floating mb-4">
                    <input type="text" asp-for="SongName" class="form-control rounded-3" id="SongName"
                        placeholder="Song Name" />
                    <label for="SongName" class="form-label">Song Name</label>
                    <span asp-validation-for="SongName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input type="text" asp-for="Description" class="form-control rounded-3" id="Description"
                        placeholder="Artist/s" />
                    <label for="Description" class="form-label">Artist/s</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg btn-color mx-2">Save</button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg btn-color">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}