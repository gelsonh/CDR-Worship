@{
  ViewData["Title"] = "Home Page";
}

<div class="container my-5">
  <!-- Encabezado principal con bienvenida -->
  <div class="text-center mb-5">
    <h3 class="display-4 text-uppercase">Bienvenido a</h3>
    <h1 class="fw-bold" style="color: var(--gh-theme-400);">CDR Worship</h1>
    <hr class="w-50 mx-auto my-4" />
  </div>

  <!-- Información y foto -->
  <div class="row mb-5 align-items-center">
    <div class="col-md-6">
      <h2 class="text-center" style="color: var(--gh-theme-400);">Nuestra Misión</h2>
      <p class="text-justify" style="color: var(--gh-theme-900);">
        Guiamos a la congregación en la adoración a través de música auténtica. Creemos que la adoración es una
        respuesta a la gracia de Dios y un acto de devoción.
      </p>
      <blockquote class="blockquote text-center">
        <p class="mb-0 fw-bold display-6" style="color: var(--gh-theme-600);">"La adoración es una respuesta a
          la gracia infinita de Dios."</p>
      </blockquote>
    </div>
    <div class="col-md-6">
      <img src="~/assets/img/CDRW-Home.jpg" class="img-fluid rounded shadow-lg" alt="Equipo de CDR Worship" />
      @* <figcaption class="text-muted mt-2 text-center">Nuestro equipo.</figcaption> *@
    </div>
  </div>

  <!-- Mensaje de agradecimiento final -->
  <div class="text-center mt-5">
    <h3 class="italic-heading" style="color: var(--gh-theme-600);">¡Gracias por visitarnos!</h3>
  </div>
</div>