@model IEnumerable<CDR_Worship.Models.ScheduledSong>

@using CDR_Worship.Models


@{
    ViewData["Title"] = "Index";
}

<style>



    .ul-style .list-style {
        width: 200px;
        height: 35px;
        display: flex;
        align-items: center;
        margin: 1.5em;
        cursor: pointer;
        padding: 1em;
        background: rgb(43, 43, 43);
        position: relative;
        color: white;
        border-radius: 5px;
    }

        .ul-style .list-style::before,
        .ul-style .list-style::after {
            content: "";
            position: absolute;
            z-index: -1;
            border-radius: 5px;
            width: 105%;
            transition: all 0.4s;
        }

        .ul-style .list-style::before {
            left: 0%;
            height: 130%;
            background: linear-gradient(to right, #021B79, #0575E6);
        }

        .ul-style .list-style::after {
            left: -10%;
            height: 120%;
            background: #ffffff56;
            backdrop-filter: blur(10px);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.164);
        }

        .ul-style .list-style:hover::before {
            transform: translateX(-2.5%);
        }

        .ul-style .list-style:hover::after {
            transform: translateX(15%);
        }
</style>


<div id="list" class="section-page">

    <div class="container-xxl my-5">

        <h2 class="text-center display-1 my-4">Programacion del Domingo</h2>

        <div class="row">
            @foreach (var song in Model)
            {
                <div class="col-lg-4 my-3">
                    <ul class ="ul-style">
                        <span class="h5">Nombe de la cancion:</span>
                        <br />
                        <li class="list-style">@song.Name</li>
                        <span class="h5">Cantante Principal:</span>
                        <br />
                        <li class="list-style">@song.LeadSinger?.MemberName</li>
                        <span class="h5">Fecha:</span>
                        <br />
                        <li class="list-style">@song.StartDate.ToString("MM/dd/yyyy")</li>
                        <br />
                        <li class="list-style">
                            <span class="h5">Detalles:</span>
                            @if (User.Identity!.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Moderator")))
                            {
                                <div>
                                    <a asp-action="Edit" asp-route-id="@song.Id" data-toggle="tooltip" title="Editar" class="mx-2 text-decoration-none">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@song.Id" data-toggle="tooltip" title="Eliminar" class="mt-2 text-decoration-none">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            }
                        </li>
                    </ul>
                </div>



            }
        </div>

        <div class="mt-3">
            <a asp-action="Create" class="btn btn-success">Agregar Nueva Programacion</a>
        </div>
    </div>

</div>

