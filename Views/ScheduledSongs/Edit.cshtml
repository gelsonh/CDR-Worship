@model CDR_Worship.Models.ScheduledSong

@{
    ViewData["Title"] = "Editar Canción Programada";
}

<div class="section-page py-5">
    <div class="container" style="max-width: 600px; margin: 0 auto;">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white text-center">
                <h4 class="card-title mb-0 fw-bold">Editar Canción Programada</h4>
            </div>
            <div class="card-body p-5">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Nombre de la Canción:</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LeadSingerId" class="form-label">Cantante Principal:</label>
                        <select asp-for="LeadSingerId" class="form-select" asp-items="ViewBag.LeadSingers">
                            <option value="">Seleccionar Cantante Principal</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="StartDate" class="form-label">Fecha:</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Volver a la Lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}