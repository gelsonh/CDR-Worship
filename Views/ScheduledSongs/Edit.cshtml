@model CDR_Worship.Models.ScheduledSong

@{
    ViewData["Title"] = "Editar Programación";
}

<style>
    /* Form Styles */
    .form-floating .form-control,
    .form-floating .form-select {
        border-radius: 0.5rem;
    }

    .form-floating label {
        font-size: 0.875rem;
        color: #6c757d;
    }

    /* Optional: Add custom focus styles */
    .form-control:focus,
    .form-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
    }
</style>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card box-shadow" style="max-width: 600px; width: 100%;">

        <div class="card-body p-5">
            <h1 class="text-center mb-5" style="font-weight: 700; font-size: 1.8rem;">@ViewData["Title"]</h1>


            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-floating mb-4">
                    <input type="text" asp-for="Name" class="form-control rounded-3"
                        placeholder="Nombre de la Canción" />
                    <label asp-for="Name" class="form-label">Nombre de la Canción:</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <select asp-for="LeadSingerId" class="form-select rounded-3" asp-items="ViewBag.LeadSingers">
                        <option value="">Seleccionar Cantante Principal</option>
                    </select>
                    <label asp-for="LeadSingerId" class="form-label">Cantante Principal:</label>
                </div>


                <div class="form-floating mb-4">
                    <input asp-for="StartDate" type="date" class="form-control rounded-3" />
                    <label asp-for="StartDate" class="form-label">Fecha:</label>
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-color btn-primary mx-2">Guardar</button>
                    <a asp-action="Index" class="btn btn-color btn-outline-secondary">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}